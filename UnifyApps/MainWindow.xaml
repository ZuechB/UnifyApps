<Window x:Class="UnifyApps.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:wpf="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
        xmlns:controls="clr-namespace:UnifyApps.Controls"
        xmlns:local="clr-namespace:UnifyApps"
        mc:Ignorable="d"
        Title="Unify Apps" Height="388" Width="815" Background="#FF151515" Loaded="Window_Loaded">
    <Grid>
        <Border BorderBrush="Gray" BorderThickness="0,1" Margin="67,0,0,0">
            <wpf:ChromiumWebBrowser x:Name="Browser" Address="https://slack.com" />
        </Border>
        <StackPanel x:Name="spItems" HorizontalAlignment="Left" Width="67">
            <controls:Platform Title="Add" Image="/Images/baseline_add_circle_outline_white_18dp.png" HorizontalAlignment="Center" VerticalAlignment="Center" ></controls:Platform>
        </StackPanel>
    </Grid>
</Window>
